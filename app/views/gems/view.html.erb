<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title>Gemstone</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

    <style>
      body { padding-top: 70px; }
    </style>


    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Gemstone</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <% if session[:user_id] == nil %>
              <li class=""><a href="/auth/facebook">Login</a></li>
            <% else %>
              <li class=""><a href="#"><b>Welcome</b> <%= session[:user_name] %></a></li>
            <% end %>
            <li class="active"><a href="#">Home</a></li>
            <li class=""><a href="/users">Miners</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if session[:user_id] != nil %>
              <li class=""><a href="/logout">Logout</a></li>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <!-- Alerts -->
    <% if @alert != nil %>
      <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Hey!</strong> <%= @alert %>
      </div>
    <% end %>
    <!-- End Alerts -->

    <% if Submission.where(date:@date).size > 0 %>

      <div class="container">
        <!-- Today -->
        <div class="row">
          <div class="col-md-4 col-md-offset-4 text-center">
            <h2>
              Gems from
              <% if @date == Time.now.in_time_zone('Eastern Time (US & Canada)').to_date %>
                <%= "Today" %>
              <% elsif @date == Time.now.in_time_zone('Eastern Time (US & Canada)').to_date - 1 %>
                <%= "Yesterday" %>
              <% else %>
                <%= (@date).strftime("%A") %>
              <% end %>
            </h2>
          </div>
        </div>

        <% Submission.where(date: @date).find_each do |gem| %>
          <% if gem.user != nil %>
            <% u = User.find(userid=gem.user) %>
            <div class="row well">
              <div class="col-md-1">
                <a href="/gems/<%= gem.id %>/up" class="btn btn-default">
                  <i class="glyphicon glyphicon-menu-up"></i>
                  <p class="lead">
                    <%= gem.karma %>
                  </p>
                </a>
              </div>
              <div class="col-md-8">
                <h4>
                  <a href="<%= gem.url %>">
                    <% if gem.title != nil %>
                      <%= gem.title %>
                    <% else %>
                      <%= gem.id %>
                    <% end %>
                  </a>
                </h4>
                <p class=""><%= gem.description %></p>
                <!-- <a href="/gems/<%= gem.id %>" class="btn btn-primary">View</a> -->
              </div>
              <div class="col-md-3 text-center">
                <h3> Submitted By </h3>
                <hr>
                <h4><%= u.name %></h4>
              </div>
            </div>
          <% end %>
        <% end %>
        <!-- End Today -->
      <% end %>

      <% if Submission.where(date:@date-1).size > 0 %>

        <!-- Yesterday -->
        <div class="row">
          <div class="col-md-4 col-md-offset-4 text-center">
            <h2>
              Gems from
              <% if @date-1 == Time.now.in_time_zone('Eastern Time (US & Canada)').to_date %>
                <%= "Today" %>
              <% elsif @date-1 == Time.now.in_time_zone('Eastern Time (US & Canada)').to_date - 1 %>
                <%= "Yesterday" %>
              <% else %>
                <%= (@date-1).strftime("%A") %>
              <% end %>
            </h2>
          </div>
        </div>

        <% Submission.where(date: @date-1).find_each do |gem| %>
          <% if gem.user != nil %>
            <% u = User.find(userid=gem.user) %>
            <div class="row well">
              <div class="col-md-1">
                <a href="/gems/<%= gem.id %>/up" class="btn btn-default">
                  <i class="glyphicon glyphicon-menu-up"></i>
                  <p class="lead">
                    <%= gem.karma %>
                  </p>
                </a>
              </div>
              <div class="col-md-8">
                <h4>
                  <a href="<%= gem.url %>">
                    <% if gem.title != nil %>
                      <%= gem.title %>
                    <% else %>
                      <%= gem.id %>
                    <% end %>
                  </a>
                </h4>
                <p class=""><%= gem.description %></p>
                <!-- <a href="/gems/<%= gem.id %>" class="btn btn-primary">View</a> -->
              </div>
              <div class="col-md-3 text-center">
                <h3> Submitted By </h3>
                <hr>
                <h4><%= u.name %></h4>
              </div>
            </div>
          <% end %>
        <% end %>
        <!-- End Yesterday -->
      <% end %>

      <% if Submission.where(date:@date-2).size > 0 %>

        <!-- Day Before Yesterday -->
        <div class="row">
          <div class="col-md-4 col-md-offset-4 text-center">
            <h2>
              Gems from
              <% if @date-2 == Time.now.in_time_zone('Eastern Time (US & Canada)').to_date %>
                <%= "Today" %>
              <% elsif @date-2 == Time.now.in_time_zone('Eastern Time (US & Canada)').to_date - 1 %>
                <%= "Yesterday" %>
              <% else %>
                <%= (@date-2).strftime("%A") %>
              <% end %>
            </h2>
          </div>
        </div>

        <% Submission.where(date: @date-2).find_each do |gem| %>
          <% if gem.user != nil %>
            <% u = User.find(userid=gem.user) %>
            <div class="row well">
              <div class="col-md-1">
                <a href="/gems/<%= gem.id %>/up" class="btn btn-default">
                  <i class="glyphicon glyphicon-menu-up"></i>
                  <p class="lead">
                    <%= gem.karma %>
                  </p>
                </a>
              </div>
              <div class="col-md-8">
                <h4>
                  <a href="<%= gem.url %>">
                    <% if gem.title != nil %>
                      <%= gem.title %>
                    <% else %>
                      <%= gem.id %>
                    <% end %>
                  </a>
                </h4>
                <p class=""><%= gem.description %></p>
                <!-- <a href="/gems/<%= gem.id %>" class="btn btn-primary">View</a> -->
              </div>
              <div class="col-md-3 text-center">
                <h3> Submitted By </h3>
                <hr>
                <h4><%= u.name %></h4>
              </div>
            </div>
          <% end %>
        <% end %>
        <!-- End Day Before Yesterday -->
      <% end %>

      <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <a href="/gems/date/<%= @date-3 %>" class="btn btn-large btn-default">Older</a>
        </div>
        <div class="col-md-4">
          <% if @date != Time.now.in_time_zone('Eastern Time (US & Canada)').to_date %>
            <a href="/gems/date/<%= @date+3 %>" class="btn btn-large btn-default">Newer</a>
          <% else %>
          <a href="" class="btn btn-large btn-default" disabled="disabled">Newer</a>
          <% end %>
        </div>
      </div>

    </div><!-- /.container -->
  </body>
</html>
